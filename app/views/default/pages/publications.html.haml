.publications
	.ctas
		=image_tag "cta-logo.png", :class => "cta-logo"
	.container
		%h3{:class => "heading"}Publications
		- @page.content(:publication_list).structure_items.each do |part|
			.publication
				%a{ :href => part.content(:article_url).try(:html_safe), :title => "Read more" }
					.image
						-# = part.content(:image).try(:html_safe)
						=image_tag "cure.jpg", :class => "publication-image"
					.text 
						.title 
							= part.content(:title).try(:html_safe) 
						.summary
							= part.content(:summary).try(:html_safe)